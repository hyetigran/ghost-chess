{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["*"],
      "@env": ["./lib/env.js"]
    },
    "esModuleInterop": true,
    "checkJs": true,
    "moduleResolution": "bundler"
  },
  "exclude": [
    "node_modules/",
    "babel.config.js",
    "metro.config.js",
    "docs",
    "cli",
    "android",
    "ios"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}
